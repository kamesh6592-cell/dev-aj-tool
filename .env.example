# Example environment variables for TOMO
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (Supabase Postgres)
POSTGRES_URL=your_postgres_url
POSTGRES_PRISMA_URL=your_postgres_prisma_url
POSTGRES_URL_NON_POOLING=your_postgres_url_non_pooling

# Hugging Face Configuration (for AI models only)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_hugging_face_token_here
DEFAULT_HF_TOKEN=hf_your_default_hugging_face_token_here

# Next.js Configuration
NEXT_APP_API_URL=http://localhost:3000
NODE_ENV=development

# Google Site Verification (optional)
# For Google Search Console verification
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code